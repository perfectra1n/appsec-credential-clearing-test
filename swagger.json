{
  "swagger": "2.0",
  "info": {
    "version": "2.0.0",
    "title": "NextGen B2B API",
    "description": "New & secure JSON-based API for our enterprise customers. (Deprecates previously offered XML-based endpoints)",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "basePath": "/b2b/v2",
  "tags": [
    {
      "name": "Order",
      "description": "API for customer orders"
    }
  ],
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/orders": {
      "post": {
        "tags": [
          "Order"
        ],
        "description": "Create new customer order",
        "parameters": [
          {
            "name": "order",
            "in": "body",
            "description": "Customer order to be placed",
            "schema": {
              "$ref": "#/definitions/Order"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "New customer order is created",
            "schema": {
              "$ref": "#/definitions/OrderConfirmation"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Order": {
      "required": [
        "cid"
      ],
      "properties": {
        "cid": {
          "type": "string",
          "uniqueItems": true
        },
        "orderLines": {
          "$ref": "#/definitions/OrderLines"
        },
        "orderLinesData": {
          "$ref": "#/definitions/OrderLinesData"
        }
      }
    },
    "OrderConfirmation": {
      "required": [
        "cid",
        "orderLines"
      ],
      "properties": {
        "cid": {
          "type": "string",
          "uniqueItems": true
        },
        "orderLines": {
          "$ref": "#/definitions/OrderLines"
        },
        "totalQuantity": {
          "type": "integer",
          "example": 4000
        },
        "paymentDue": {
          "description": "All payments are due 14 days after order placement",
          "type": "string",
          "format": "date"
        }
      }
    },
    "OrderLine": {
      "description": "Order line in default JSON format",
      "required": [
        "productId",
        "quantity"
      ],
      "properties": {
        "productId": {
          "type": "integer",
          "example": 28
        },
        "quantity": {
          "type": "integer",
          "minimum": 1,
          "example": 1000
        },
        "customerReference": {
          "type": "string"
        }
      }
    },
    "OrderLines": {
      "type": "array",
      "items" : {
        "$ref": "#/definitions/OrderLine"
      }
    },
    "OrderLineData": {
      "description": "Order line in customer specific data format",
      "type": "string",
      "example": [
        "{\"productId\": 28,\"quantity\": 1000,\"customerReference\": \"...\"}",
        "{\"productId\": 28,\"quantity\": 1000,\"customerReference\": [\"...\", \"...\"]}",
        "{\"productId\": 28,\"quantity\": 1000,\"customerReference\": \"...\",\"couponCode\": \"pes[Bh.u*t\"}"
      ]
    },
    "OrderLinesData": {
      "type": "array",
      "items" : {
        "$ref": "#/definitions/OrderLineData"
      }
    }
  }
}